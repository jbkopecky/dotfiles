# Setup fzf
# ---------
if [[ ! "$PATH" == */home/jb/.fzf/bin* ]]; then
  export PATH="$PATH:/home/jb/.fzf/bin"
fi

# Man path
# --------
if [[ ! "$MANPATH" == */home/jb/.fzf/man* && -d "/home/jb/.fzf/man" ]]; then
  export MANPATH="$MANPATH:/home/jb/.fzf/man"
fi

# Auto-completion
# ---------------
[[ $- == *i* ]] && source "/home/jb/.fzf/shell/completion.bash" 2> /dev/null

# Key bindings
# ------------
source "/home/jb/.fzf/shell/key-bindings.bash"

